CC = gcc
CFLAGS = -Wall -MMD -std=c99 -g -Werror
BIN = rhuff
SRCS = huff.c tree.c io.c rle.c
OBJS = ${SRCS:.c=.o}
# These are generated by -MMD flag
DEPS = ${SRCS:.c=.d}

${BIN}: ${OBJS}
	${CC} ${CFLAGS} -o ${BIN} ${OBJS}

.PHONY: test
test:
	./test.sh

clean:
	@rm -f rhuff ${OBJS} ${DEPS}

-include ${DEPS}
